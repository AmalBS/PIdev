<body>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

<div class="container">
    <div class="container-login100" style="">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">

            <form class="login100-form validate-form flex-sb flex-w" action="{{ path("fos_user_security_check") }}" method="post">

                <span class="login100-form-title p-b-53">
						Connexion
					</span>




                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Username
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ username obligatoire">
                        {{ form_widget(form.username,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Mot de passe
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ mot de passe obligatoire">
                        {{ form_widget(form.plainPassword.first,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Confirmer le mot de passe
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ mot de passe obligatoire">
                        {{ form_widget(form.plainPassword.second,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Email
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ email obligatoire">
                        {{ form_widget(form.email,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Nom
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ nom obligatoire">
                        {{ form_widget(form.nom,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Prenom
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ prenom obligatoire">
                        {{ form_widget(form.prenom,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							Adresse
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Champ adresse obligatoire">
                        {{ form_widget(form.adresse,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="p-t-31 p-b-9">
						<span class="txt1">
							S'inscrire en tant que
						</span>
                    <div class="wrap-input100 validate-input" data-validate = "Selection obligatoire">
                        {{ form_widget(form.roles,{'attr':{'class':' validate-input input100'} }) }}
                        <span class="focus-input100"></span>
                    </div>
                </div>




                <div class="container-login100-form-btn m-t-17">
                <input class="login100-form-btn" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>


                {{ form_end(form) }}
    </form>

</div>
</body>
